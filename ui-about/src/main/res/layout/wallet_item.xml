<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="5dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/wallet_logo_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/donate" />

    <com.lookaround.core.android.view.textview.MarqueeTextView
        android:id="@+id/wallet_address_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:textColor="#fff"
        app:centerText="false"
        app:edgeEffectColor="#fff"
        app:edgeEffectEnabled="true"
        app:edgeEffectWidth="20"
        app:pauseDuration="3000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/donate"
        android:src="@drawable/ic_baseline_content_copy_24" />

</LinearLayout>
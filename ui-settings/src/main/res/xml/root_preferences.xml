<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/preferences_theme_header">

        <ListPreference
            android:defaultValue="@string/preference_theme_system_value"
            android:entries="@array/preference_theme_labels"
            android:entryValues="@array/preference_theme_values"
            app:iconSpaceReserved="false"
            app:key="@string/preference_theme_key"
            app:summary="@string/preference_theme_summary"
            app:title="@string/preference_theme_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/preferences_ar_header">

        <SeekBarPreference
            android:max="10"
            app:defaultValue="5"
            app:iconSpaceReserved="false"
            app:key="@string/preference_sensitivity_key"
            app:min="1"
            app:showSeekBarValue="true"
            app:summary="@string/preference_sensitivity_summary"
            app:title="@string/preference_sensitivity_title" />

        <CheckBoxPreference
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="@string/preference_dynamic_camera_blur_key"
            app:summary="@string/preference_dynamic_camera_blur_summary"
            app:title="@string/preference_dynamic_camera_blur_title" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/preferences_cache_header">

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/preference_clear_cache_key"
            app:summary="@string/preference_clear_cache_summary"
            app:title="@string/preference_clear_cache_title" />

    </PreferenceCategory>

</PreferenceScreen>